<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15202B"
    tools:context=".Fragments.ForthFragment">

    <TextView
        android:id="@+id/forthFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/forthFecha"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/forthDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/forthFecha"
        android:layout_marginTop="1dp"
        android:background="#38444D" />

    <ImageView
        android:id="@+id/forthImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/forthDivider" />

    <ListView
        android:id="@+id/listView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/forthImage"
        android:divider="#38444D"
        android:dividerHeight="1px" />

</RelativeLayout>